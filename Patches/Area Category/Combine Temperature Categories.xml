<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <defaultValue>True</defaultValue>
        <label>Combine Temperature Subcategories. (Default: True)</label>
        <id>CombineTemperatureSubcategories</id>
        <category>AreaCategory</category>

        <operations>

            <!-- Move everything in Heating & Cooling to Airflow -->
            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[designationCategory="Ferny_Heating" or designationCategory="Ferny_Cooling"]/designationCategory</xpath>
                <value>
                    <designationCategory>Ferny_AirManagement</designationCategory>
                </value>
            </li>

            <!-- Rename Airflow to Temperature -->
            <li Class="PatchOperationReplace">
                <xpath>Defs/DesignationCategoryDef[defName="Ferny_AirManagement"]/label</xpath>
                <value>
                    <label>Temperature</label>
                </value>
            </li>

        </operations>

    </Operation>

</Patch>